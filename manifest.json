{
    "manifest_version": 3,
    "name": "ETH Course Number to Text",
    "version": "1.0",
    "description": "Replace course Numbers with their actual names on web pages.",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },

    "web_accessible_resources": [
        {
            "resources": [
                "popup.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
 }